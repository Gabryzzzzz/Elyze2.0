@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model Elyze.Models.Sede.SedeViewFormModel
@{
    ViewData["Title"] = @SharedLocalizer["Sede_Modify"];
    Layout = "~/Views/Shared/_Page.cshtml";
}

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")
@await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])

<div class="area-contents-form">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label class="control-label">@SharedLocalizer["Company"]</label>
            @Html.DropDownListFor(m => m.SocietaId, new SelectList(ViewBag.societa, "Id", "Descrizione"), new { @id = "SocietaId", @class = "form-control" })
        </div>

        <div class="form-group">
            <label asp-for="Descrizione" class="control-label">@SharedLocalizer["Sede_Description"]</label>
            <input asp-for="Descrizione" class="form-control" />
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SedeN" class="control-label">@SharedLocalizer["Sede_N"]</label>
            <input asp-for="SedeN" class="form-control" />
            <span asp-validation-for="SedeN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsoNazione" class="control-label">@SharedLocalizer["IsoCountry"]</label>
            <input asp-for="IsoNazione" class="form-control" />
            <span asp-validation-for="IsoNazione" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nazione" class="control-label">@SharedLocalizer["Country"]</label>
            <input asp-for="Nazione" class="form-control" />
            <span asp-validation-for="Nazione" class="text-danger"></span>
        </div>
        <div class="form-footer">
            <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-success btn-lg px-5 py-2 mt-2 fixed-btn-width" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-2 mt-2 fixed-btn-width">@SharedLocalizer["Back"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
