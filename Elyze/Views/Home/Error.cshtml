@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["Error"];
}
@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")

<div class="full-screen-blue">
    <div class="absolute-centering">
        <div action="Error" class="d-flex align-items-center flex-column gap-2">
            <div class="text-center">
                <img src="/img/IconeSVG/Icon-Error.svg" style="width: 150px; height:150px" />
            </div>
            <p class="text-center">@SharedLocalizer["Generic_Error"]</p>
            <button href="@ViewData["BasePath"]/" class="btn btn-primary btn-lg px-5 py-2 mt-2 fixed-btn-width" style="width:23rem">Torna alla home</button>
        </div>
    </div>
</div>