@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer


@{
    ViewData["Title"] = @SharedLocalizer["Gerarchie"];
}


@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")

<div class="d-flex flex-column align-items-center home-page">
    @await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])
    <div class="full-screen-blue home-layout">
        <div class="full-screen-blue menu-grid" id="gerarchie-menu">
            <a asp-controller="Gruppo" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Gruppo.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Groups"]</div>
            </a>
            <a asp-controller="Societa" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Societa.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Company"]</div>
            </a>
            <a asp-controller="Sede" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Sede.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Sedi"]</div>
            </a>
            <a asp-controller="Reparto" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Reparto.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Reps"]</div>
            </a>
        </div>
        <div class="divider d-none">@SharedLocalizer["Funzionalita"]</div>
        <div class="full-screen-blue menu-grid d-none">
            
        </div>
    </div>

</div>

<img class="vanish logo-confindustria" src="~/img/loghi/Logo-Confindustria.svg" />

