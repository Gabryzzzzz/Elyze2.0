@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model Elyze.Models.Gruppo.GruppoViewFormModel
@{
    ViewData["Title"] = "Dettagli Gruppo";
    Layout = "~/Views/Shared/_Page.cshtml"; 
}

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")
@await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])
<div class="area-contents-form">
    <div class="form">
        <div class="form-group">
            <label asp-for="Id" class="control-label">@SharedLocalizer["Group_Id"]</label>
            <input disabled asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label">@SharedLocalizer["Group_Name"]</label>
            <input disabled asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descrizione" class="control-label">@SharedLocalizer["Group_Description"]</label>
            <input disabled asp-for="Descrizione" class="form-control" />
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>
        <div class="form-footer">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-2 mt-2 fixed-btn-width">@SharedLocalizer["Back"]</a>
        </div>
    </div>
    @*    <div>
    <a title="@SharedLocalizer["Back"]" asp-action="Index">@SharedLocalizer["Back"]</a>
    </div>*@
</div>