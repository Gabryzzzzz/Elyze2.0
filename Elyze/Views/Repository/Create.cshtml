@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model Elyze.Models.Repository.RepositoryFormViewModel
@{
    ViewData["Title"] = @SharedLocalizer["Repository_AddRepository"];
    Layout = "~/Views/Shared/_Page.cshtml";
}

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")
@await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])

<div class="area-contents-form">

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Titolo" class="control-label">@SharedLocalizer["Title"]</label>
            <input asp-for="Titolo" class="form-control" />
            <span asp-validation-for="Titolo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descrizione" class="control-label">@SharedLocalizer["Description"]</label>
            <input asp-for="Descrizione" class="form-control" />
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Area" class="control-label">@SharedLocalizer["Area"]</label>
            @Html.DropDownList("AreaId", (SelectList)Model.Area, @SharedLocalizer["DropDownListSelect"].Value, new { @id = "AreaId", @class = "form-control" })
            <span asp-validation-for="AreaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Area" class="control-label">@SharedLocalizer["Societa"]</label>
            @Html.DropDownList("SocietaId", (SelectList)Model.Societa, @SharedLocalizer["DropDownListSelect"].Value, new { @id = "SocietaId", @class = "form-control" })
            <span asp-validation-for="SocietaId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Area" class="control-label">@SharedLocalizer["File"]</label>
            <input name="UploadedFiles" class="form-control form-control" type="file">
        </div>
        <div class="form-footer">
            <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-success btn-lg px-5 py-2 mt-2 fixed-btn-width" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-2 mt-2 fixed-btn-width">@SharedLocalizer["Back"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
