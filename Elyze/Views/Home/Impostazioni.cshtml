@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")

<div class="d-flex flex-column align-items-center home-page">
    @await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])
    <div class="full-screen-blue home-layout" >
        <div class="full-screen-blue menu-grid" id="impostazioni">
            @*Row Area and related*@
            <a asp-controller="Area" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Gestisci-Area.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Area"]</div>
            </a>
            <a asp-controller="MicroArea" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Gestisci-Microarea.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["MA_MicroArea"]</div>
            </a>
            <a asp-controller="CampiMicroArea" asp-action="Index" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Gestisci-Campi.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["MA_Fields"]</div>
            </a>
            <a asp-controller="Area" asp-action="Create" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Aggiungi-Area.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Add_Area"]</div>
            </a>
            <a asp-controller="MicroArea" asp-action="Create" asp-route-id="@ViewData["IdArea"]" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Aggiungi-MicroArea.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["MA_Add"]</div>
            </a>
            <a asp-controller="CampiMicroArea" asp-action="create" class="functionalities menu-grid-background-set">
                <img src="/img/IconeSVG/Icon-Aggiungi-Campo.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Add"] @SharedLocalizer["MA_Fields"]</div>
            </a>

            @*Row Features*@
            <a asp-controller="Gen" asp-action="ImportaInserimenti" class="functionalities">
                <img src="/img/IconeSVG/Icon-Import-Dati.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Import"]</div>
            </a>

            @if (ViewBag.Features.Repository)
            {
                <a asp-controller="Repository" asp-action="Index" class="functionalities">
                    <img src="/img/elyze-upload-documenti.png" alt="Upload Document" />
                    <div class="title-text-style text-white"> @SharedLocalizer["UploadDocument"]</div>
                </a>
            }
            else
            {
                <a class="p-3  d-flex functionalities">
                    <img src="/img/elyze-upload-documenti.png" alt="Upload Document" />
                    <div style="opacity: 0.5;" class="title-text-style text-white"> @SharedLocalizer["UploadDocument"]</div>
                </a>
            }
            <a asp-controller="Gen" asp-action="ExportMultiplo" class="functionalities">
                <img src="/img/IconeSVG/Icon-Import-Dati.svg" />
                <div class="title-text-style text-white">@SharedLocalizer["Export_Multiplo"]</div>
            </a>
            @*Row Unita & valute*@
            <a asp-controller="OperatoreDiConversione" asp-action="Index" class="functionalities">
                <img src="/img/IconeSVG/Icona-Conversioni.svg" style="color: #ffffff" />
                <div class="title-text-style text-white">@SharedLocalizer["Conversion"]</div>
            </a>
            <a asp-controller="UnitaMisura" asp-action="Index" class="functionalities">
                <img src="/img/IconeSVG/Icona-UnitaMisura.svg" style="color: #ffffff" />
                <div class="title-text-style text-white">@SharedLocalizer["UDM"]</div>
            </a>
            @*    <a asp-controller="Valuta" asp-action="Index" class="functionalities">
            <img src="/img/IconeSVG/Icon-Missing.svg" style="color: #ffffff" />
            <div class="title-text-style text-white">@SharedLocalizer["Currency"]</div>
            </a>*@
        </div>
        <div class="divider d-none">@SharedLocalizer["Funzionalita"]</div>
        <div class="full-screen-blue menu-grid d-none">
        </div>
    </div>

</div>

<img class="vanish logo-confindustria" src="~/img/loghi/Logo-Confindustria.svg" />

