@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model Elyze.Models.OperatoriDiConversione.OperatoreDiConversioneViewDto
@{
    ViewData["Title"] = @SharedLocalizer["Conversion_Create"];
    Layout = "~/Views/Shared/_Page.cshtml";
}

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")
@await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])

<div class="area-contents-form">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="UnitaDiMisuraArrivoId" class="control-label">@SharedLocalizer["UDM_Start"]</label>
            @Html.DropDownList("UnitaDiMisuraPartenzaId", (SelectList)Model.UnitaDiMisuraPartenza,  @SharedLocalizer["DropDownListSelect"].Value, new { @id = "UnitaDiMisuraPartenzaId", @class = "form-control" })
            <span asp-validation-for="UnitaDiMisuraPartenzaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UnitaDiMisuraArrivoId" class="control-label">@SharedLocalizer["UDM_Target"]</label>
            @Html.DropDownList("UnitaDiMisuraArrivoId", (SelectList)Model.UnitaDiMisuraArrivo, @SharedLocalizer["DropDownListSelect"].Value, new { @id = "UnitaDiMisuraArrivoId", @class = "form-control" })
            <span asp-validation-for="UnitaDiMisuraArrivoId" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="form-group col-8">
                <label asp-for="FattoreDiConversione" class="control-label">@SharedLocalizer["Conversion_Factor"]</label>
                <input asp-for="FattoreDiConversione" class="form-control" />
                <span asp-validation-for="FattoreDiConversione" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Operazione" class="control-label">@SharedLocalizer["Operation"]</label>
                @Html.DropDownList("OperazioneId", (SelectList)Model.Operazione,  @SharedLocalizer["DropDownListSelect"].Value, new { @id = "OperazioneId", @class = "form-control" })
                <span asp-validation-for="OperazioneId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-footer">
            <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-success btn-lg px-5 py-2 mt-2 fixed-btn-width" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-2 mt-2 fixed-btn-width">@SharedLocalizer["Back"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
