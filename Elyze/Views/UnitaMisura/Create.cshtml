@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model Elyze.Models.UnitaDiMisura.UnitaDiMisuraViewFormModel
@{
    ViewData["Title"] = @SharedLocalizer["UDM_Create"];
    Layout = "~/Views/Shared/_Page.cshtml"; 
}

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")
@await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])

<div class="area-contents-form">
    @*<h2>@SharedLocalizer["Currency_Add"]</h2>*@
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label">@SharedLocalizer["UDM_name"]</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Simbolo" class="control-label">@SharedLocalizer["UDM_symbol"]</label>
            <input asp-for="Simbolo" class="form-control" />
            <span asp-validation-for="Simbolo" class="text-danger"></span>
        </div>
        <div class="form-footer">
            <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-success btn-lg px-5 py-2 mt-2 fixed-btn-width" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-2 mt-2 fixed-btn-width">@SharedLocalizer["Back"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
