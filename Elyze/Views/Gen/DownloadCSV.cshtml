@using Elyze.Models.Gen;
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using System.Linq;
@using Elyze.Data;

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model Elyze.Models.Gen.DownloadCSVFormViewModel
@{
    ViewData["Title"] = "Download Inserimenti";
    Layout = "~/Views/Shared/_Page.cshtml";
}

@await Html.PartialAsync("~/Views/Shared/header/_pages.cshtml")
@await Html.PartialAsync("~/Views/Shared/Title/_TitlePage.cshtml", @ViewData["Header"])

<div class="area-contents-form">
    <form asp-action="DownloadCSV">
        <div class="form-group">
            <label class="control-label">@SharedLocalizer["Area"]</label>
            @Html.DropDownListFor(m => m.IdArea, new SelectList(ViewBag.Aree, "Id", "Descrizione"), new { @id = "Area", @class = "form-control" })
            <span asp-validation-for="IdArea" class="text-danger"></span>
        </div>
        <div class="form-footer">
            <input type="submit" value="@SharedLocalizer["Download"]" class="btn btn-success btn-lg px-5 py-2 mt-2 fixed-btn-width" />
            <a asp-action="ImportaInserimenti" class="btn btn-outline-secondary btn-lg px-5 py-2 mt-2 fixed-btn-width">@SharedLocalizer["Back"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
